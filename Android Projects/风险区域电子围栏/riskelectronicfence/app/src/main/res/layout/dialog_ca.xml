<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_width="800dp"
    android:layout_height="420dp"
    android:background="@drawable/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/device_id_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mqtt服务器地址:"
                android:textAppearance="@style/InterfaceTextStyleSmall" />

            <EditText
                android:textAppearance="@style/InterfaceTextStyleSmall"
                android:id="@+id/mqtt_fwq"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:backgroundTint="@color/grey"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ai服务器地址:"
                android:textAppearance="@style/InterfaceTextStyleSmall" />

            <EditText
                android:textAppearance="@style/InterfaceTextStyleSmall"
                android:id="@+id/ai_fwq"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:backgroundTint="@color/grey"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/base_station_id_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mqtt用户名:"
                android:textAppearance="@style/InterfaceTextStyleSmall" />

            <EditText
                android:textAppearance="@style/InterfaceTextStyleSmall"
                android:id="@+id/mqtt_uname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:backgroundTint="@color/grey"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mqtt密码:"
                android:textAppearance="@style/InterfaceTextStyleSmall" />

            <EditText
                android:textAppearance="@style/InterfaceTextStyleSmall"
                android:id="@+id/mqtt_pwd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:backgroundTint="@color/grey"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/alarm_ip_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AI摄像头IP地址:"
                android:textAppearance="@style/InterfaceTextStyleSmall" />

            <EditText
                android:textAppearance="@style/InterfaceTextStyleSmall"
                android:id="@+id/alarm_ip_edittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:backgroundTint="@color/grey"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/infrared_camera_ip_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="热成像摄像头IP地址:"
                android:textAppearance="@style/InterfaceTextStyleSmall" />

            <EditText
                android:textAppearance="@style/InterfaceTextStyleSmall"
                android:id="@+id/infrared_camera_ip_edittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:backgroundTint="@color/grey"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="黑名单:"
                android:textAppearance="@style/InterfaceTextStyleSmall" />

            <EditText
                android:textAppearance="@style/InterfaceTextStyleSmall"
                android:id="@+id/hmd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:backgroundTint="@color/grey"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="白名单:"
                android:textAppearance="@style/InterfaceTextStyleSmall" />

            <EditText
                android:textAppearance="@style/InterfaceTextStyleSmall"
                android:id="@+id/bmd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:backgroundTint="@color/grey"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/pad_ip_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pad IP地址:"
                android:textAppearance="@style/InterfaceTextStyleSmall" />

            <EditText
                android:textAppearance="@style/InterfaceTextStyleSmall"
                android:id="@+id/pad_ip_edittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:backgroundTint="@color/grey"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="黃色报警区域半径:"
                android:textAppearance="@style/InterfaceTextStyleSmall" />

            <EditText
                android:textAppearance="@style/InterfaceTextStyleSmall"
                android:id="@+id/yellow_r"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:backgroundTint="@color/grey"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="红色报警区域半径:"
                android:textAppearance="@style/InterfaceTextStyleSmall" />

            <EditText
                android:textAppearance="@style/InterfaceTextStyleSmall"
                android:id="@+id/red_r"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:backgroundTint="@color/grey"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@id/parent"
        app:layout_constraintTop_toTopOf="@id/parent">

        <TextView
            android:id="@+id/save_ca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:text="保存设置"
            android:textAppearance="@style/InterfaceTextStyleSmall" />

        <TextView
            android:id="@+id/exit_ca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:text="退出"
            android:textAppearance="@style/InterfaceTextStyleSmall" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>